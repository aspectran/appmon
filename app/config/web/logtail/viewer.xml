<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <translet name="/">
        <echo id="page">
            <item name="headline">Log Relayer</item>
            <item name="teaser">A web application that tails log files and relays the results in real time to the log viewer via the websocket endpoint.</item>
            <item name="include">logtail/viewer</item>
            <item name="style">fluid plate solid</item>
        </echo>
        <dispatch name="templates/frame"/>
    </translet>

</aspectran>