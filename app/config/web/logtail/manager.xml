<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <bean id="logTailerManager" class="app.relayer.LogTailerManager">
        <arguments>
            <item>#{class:app.relayer.LogtailEndpoint}</item>
            <item type="array">
                <bean class="app.relayer.LogTailer">
                    <arguments>
                        <item>app-log</item>
                        <item>#{basePath}/logs/app.log</item>
                    </arguments>
                </bean>
            </item>
        </arguments>
    </bean>

</aspectran>